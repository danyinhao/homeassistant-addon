{
    "name": "iHost Hardware Control",
    "version": "1.0.26",
    "slug": "danyinhao_hass_test",
    "description": "hass test",
    "uart": true,
    "udev": true,
    "url": "https://github.com/danyinhao/homeassistant-addon/tree/main/hass_control",
    "startup": "application",
    "boot": "auto",
    "arch": [
        "armv7"
    ],
    "services": [
        "mqtt:need"
    ],
    "map": [
        {
            "type": "share",
            "read_only": false
        },
        {
            "type": "homeassistant_config",
            "read_only": false,
            "path": "/config"
        }
    ],
    "translations": [
        {
            "language": "en",
            "url": "/local/translations/en.yaml"
        },
        {
            "language": "zh",
            "url": "/local/translations/zh.yaml"
        }
    ],
    "documentation": [
        "en",
        "ch"
    ],
    "options": {
        "data_path": "/config/hass-test",
        "mqtt": {}
    },
    "schema": {
        "data_path": "str",
        "mqtt": {
            "server": "str?",
            "username": "str?",
            "password": "str?"
        }
    },
    "image": "ghcr.io/danyinhao/hass-test-{arch}",
    "hassio_role": "admin",
    "hassio_api": true,
    "devices": [
        "/dev/ttyS3"
    ]
}